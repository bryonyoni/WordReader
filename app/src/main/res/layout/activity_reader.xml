<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ReaderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:translationY="-30dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currentWordTextView"
                android:layout_width="wrap_content"
                android:text="Home"
                android:layout_centerInParent="true"
                android:translationY="-50dp"
                android:textSize="35sp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/playImageView"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:visibility="visible"
                android:background="@drawable/play_button"
                android:layout_height="32dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookDetailsRelativeLayout"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:visibility="visible"
            android:paddingLeft="25dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/grey"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bookThumbnailImageView"
                        android:layout_width="50dp"
                        android:scaleType="fitXY"
                        android:alpha="0.8"
                        android:background="@drawable/image_gradient"
                        android:layout_height="50dp"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/bookTitleTextView"
                            android:layout_width="300dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Title of the book comes here"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/bookProgressValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="30%"
                            android:textColor="@color/colorAccent"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/colorAccentDark"
                            android:layout_height="1dp"/>

                        <ProgressBar
                            android:id="@+id/percentageBarView"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="40"/>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookProgressBigRelativeLayout"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:alpha="0"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:background="@color/colorAccentDark"
                android:layout_height="1dp"/>

            <ProgressBar
                android:id="@+id/bookProgressBigProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"/>

        </RelativeLayout>

        <View
            android:id="@+id/pauseView"
            android:layout_width="150dp"
            android:layout_centerInParent="true"
            android:layout_height="150dp"/>

        <View
            android:id="@+id/speedView"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_height="450dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/speedContainerCardView"
            android:layout_width="wrap_content"
            android:alpha="0"
            android:translationX="-70dp"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/speedBarView"
                    android:layout_width="50dp"
                    android:background="@color/grey"
                    android:translationY="150dp"
                    android:layout_height="300dp"/>

                <TextView
                    android:id="@+id/speedTextView"
                    android:layout_width="wrap_content"
                    android:text="50%"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>